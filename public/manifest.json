{
    "manifest_version": 3,
    "name": "Custom Grid Overlay",
    "version": "1.0",
    "description": "Extensión para superponer un grid en las páginas.",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": "icon.png"
    },
    "options_page": "options.html"
  }
  